{
  "PostgreSQL": {
    "ConnectionString": "Host=localhost;Database=myapp;Username=appuser;Password=yourpassword;Port=5432",
    "MaxRetryCount": 3,
    "MaxRetryDelayDuration": 30,
    "BaseRetryDelayMilliseconds": 1000,
    "UseExponentialBackoff": true,
    "EnableArraySupport": true,
    "EnableCompositeTypes": true,
    "EnableBulkOperations": true,
    "EnableConnectionPooling": true,
    "MinPoolSize": 1,
    "MaxPoolSize": 100,
    "ConnectionLifetime": 3600,
    "CommandTimeout": 30,
    "ConnectionTimeout": 15,
    "EnableDetailedLogging": false,
    "LogParameters": false,
    "LogSlowQueries": true,
    "SlowQueryThreshold": 1000,
    "SslMode": "Prefer",
    "TrustServerCertificate": false,
    "ServerCompatibilityMode": "None",
    "IncludeErrorDetails": false,
    "LoadBalanceHosts": false,
    "TargetSessionAttributes": "any",
    "CompositeTypeMappings": {
      "AddressType": "address_type",
      "ContactInfoType": "contact_info_type",
      "ProductDetailsType": "product_details_type"
    },
    "CustomTypeMappings": {
      "CustomEnum": "custom_enum_type",
      "CustomObject": "custom_object_type"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=myapp;Username=appuser;Password=yourpassword",
    "ReadOnlyConnection": "Host=readonly-replica;Database=myapp;Username=readonly;Password=readonly",
    "AnalyticsConnection": "Host=analytics-db;Database=analytics;Username=analytics;Password=analytics"
  },
  "BulkOperations": {
    "BatchSize": 5000,
    "UseTransaction": true,
    "ContinueOnError": false,
    "BulkTimeout": 300,
    "ValidateData": true,
    "LogProgress": true,
    "ProgressInterval": 10000,
    "UseParallelProcessing": false,
    "MaxDegreeOfParallelism": 4
  },
  "DatabaseHealthCheck": {
    "Enabled": true,
    "Interval": 30,
    "Timeout": 5,
    "EnableAutoReconnect": true,
    "MaxConnectionAttempts": 3,
    "ConnectionRetryDelay": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Core.Persistence": "Information",
      "Core.Persistence.Helpers.PostgreSqlHelper": "Debug",
      "Core.Persistence.BulkOperations": "Information",
      "Core.Persistence.ConnectionFactory": "Warning",
      "System.Net.Http": "Warning"
    }
  },
  "Environment": {
    "Name": "Development",
    "DatabaseProvider": "PostgreSQL",
    "EnableDatabaseMigrations": true,
    "EnableSeedData": true
  },
  "Performance": {
    "EnableQueryCaching": false,
    "CacheDurationMinutes": 15,
    "EnableConnectionStringCaching": true,
    "MaxConcurrentConnections": 50,
    "QueryTimeoutSeconds": 30
  },
  "Security": {
    "EnableSqlInjectionProtection": true,
    "LogSecurityEvents": true,
    "RequireEncryptedConnection": false,
    "ValidateServerCertificate": true,
    "AllowedDatabases": ["myapp", "analytics"],
    "RestrictedOperations": ["DROP", "TRUNCATE", "ALTER"]
  },
  "Monitoring": {
    "EnablePerformanceCounters": true,
    "EnableConnectionMetrics": true,
    "EnableQueryMetrics": true,
    "MetricsCollectionInterval": 60,
    "AlertThresholds": {
      "SlowQueryMs": 5000,
      "HighConnectionCount": 80,
      "ErrorRatePercent": 5
    }
  }
}

{
  "CoreLogging": {
    "MinimumLevel": "Information",
    "ApplicationName": "MyWebApi",
    "Environment": "Development",
    "IncludeMachineName": true,
    "IncludeProcessInfo": false,
    "IncludeScopes": true,
    "DefaultProperties": {
      "Version": "1.0.0",
      "ServiceName": "WeatherService"
    },
    "Strategies": {
      "Enabled": ["Console", "Database", "File"],
      "EnableAsync": true,
      "AsyncBufferSize": 1000,
      "AsyncFlushTimeout": "00:00:30",
      "EnableBatching": true,
      "BatchSize": 100,
      "BatchTimeout": "00:00:05"
    },
    "Console": {
      "Enabled": true,
      "MinimumLevel": "Information",
      "UseColors": true,
      "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Category}: {Message:lj}{NewLine}{Exception}",
      "IncludeThreadInfo": false
    },
    "Database": {
      "Enabled": true,
      "MinimumLevel": "Warning",
      "ConnectionString": "Server=.;Database=ApplicationLogs;Trusted_Connection=true;TrustServerCertificate=true;",
      "TableName": "Logs",
      "SchemaName": "dbo",
      "AutoCreateSqlTable": true,
      "BatchSize": 50,
      "BatchTimeout": "00:00:10",
      "ConnectionTimeout": "00:00:30"
    },
    "File": {
      "Enabled": false,
      "MinimumLevel": "Information",
      "Path": "logs/log-.txt",
      "RollingInterval": "Day",
      "FileSizeLimitBytes": 104857600,
      "RetainedFileCountLimit": 31,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Category}: {Message:lj}{NewLine}{Exception}"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=MyApp;Trusted_Connection=true;TrustServerCertificate=true;",
    "LoggingDb": "Server=.;Database=ApplicationLogs;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Core.Logging": "Debug"
    }
  }
}
